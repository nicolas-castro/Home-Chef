
<div class="container" style="margin-top:20px">

  <div class="col align-self-center shadow-lg p-3 mb-5 bg-white rounded" id="edit-form" 
       style="background-image:linear-gradient(rgba(255,255,255,0.9), rgba(255,255,255,0.1)), url({{foundRecipe.imageUrl}})">
    
    <form action="/recipes/{{foundRecipe._id}}/update" method="POST" enctype="multipart/form-data">
    
      <div class="form-row justify-content-center" style="margin-top:20px">
        <div class="form-group col-md-4">
          <label for="title">Title</label>
          <input name="title"  value="{{ foundRecipe.title }}" type="text" class="form-control" id="title">
        </div>
      </div>

       <div class="form-row justify-content-center">
        <div class="form-group col-md-4">
        <label for="cuisine">Type of Recipe</label>
        <select name="cuisine" class="form-control form-control" id="cuisine">
          {{#if foundRecipe.cuisine}}
            <option value="{{foundRecipe.cuisine}}" selected="selected">{{foundRecipe.cuisine}}</option>
          {{else}}
          {{/if}}
            <option>Breakfast ğŸ³</option>
            <option>Brunch ğŸ˜‹</option>
            <option>Dinner Date ğŸ’˜</option>
            <option>Cocktail ğŸ¸</option>
            <option>Quicky ğŸ˜œ</option>
            <option>Dessert ğŸ©</option>
        </select> 
        </div>
      </div>

      <div class="form-row justify-content-center">
        <div class="form-group col-md-4">
        <label for="difficulty">Difficulty</label>
        <select name="difficulty" class="form-control form-control" id="difficulty">
          {{#if foundRecipe.difficulty}}
            <option value="{{foundRecipe.difficulty}}" selected="selected">{{foundRecipe.difficulty}}</option>
          {{else}}
          {{/if}}
            <option>Home Chef</option>
            <option>Amateur Chef</option>
            <option>Master Chef</option>
        </select> 
        </div>
      </div>

      <br>

      <div class="form-row justify-content-center">
        <div class="form-group col-md-4">    
            <label for="time">Prep Time</label>
            <select name="time" class="form-control form-control active" id="time">
              {{#if foundRecipe.time}}
            <option value="{{foundRecipe.time}}" selected="selected">{{foundRecipe.time}}</option>
              {{else}}
              {{/if}}
                <option>Under 30 ğŸ˜‰</option>
                <option>30 Minutes</option>
                <option>30-60 Minutes</option>
                <option>60-90 Minutes</option>
                <option>90+ Minutes</option>
            </select> 
          </div>
      </div>
      <br>

       <div class="form-row justify-content-center">
        <div class="form-group col-md-4">
          <ul class="list-group">
            {{#each foundRecipe.ingredients}}
            <li class="list-group-item">{{ [] }}</li>
            {{/each}}
        </ul>
        </div>
      </div>

      <div class="form-row justify-content-center">
        <a href="/ingredients/{{foundRecipe._id}}" style="background-color: #ffda08;"
          class="btn  col-md-4 shadow-lg p-2 mb-9 rounded">Delete an Ingredient</a>
      </div>

      <br>

      <div class="form-row justify-content-center">
        <div class="form-group col-md-4">     
          <div class="input-group mb-3 ">
          <input name="addIngredients" type="text" class="form-control" placeholder="Add Ingredients" 
                  aria-label="addIngredients" aria-describedby="button-addon2" id="add-Ingredients">
          <div class="input-group-append">
            <button style="background-color: #ffda08;"class="btn btn-outline-secondary" type="button" id="edit-Ingredientsbtn">Add </button>
          </div>
          </div>

          <input value="{{foundRecipe.ingredients}}" type="hidden" name="ingredients" id="ingredients-Db">   
          </input>
        </div>
      </div>

      <div class="form-row justify-content-center">
        <div class="form-group col-md-4"> 
          <ul class="list-group" id="ingredientsList">
          </ul>
        </div>
      </div>
      <br>

      <div class="form-row justify-content-center">
        <div class="form-group col-md-4"> 
            <div class="custom-file">
              <input name="imageUrl" type="file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
              <label class="custom-file-label " for="inputGroupFile01">Replace Current Image</label>
            </div>
        </div>
      </div>

      <br>
    
      <div class="form-row justify-content-center">
        <button class="btn  col-md-4 shadow-lg p-2 mb-9 rounded" type="submit" style="background-color: #ffda08;">Edit Recipe</button>
      </div>
    
    </form>
  </div>
</div>

 